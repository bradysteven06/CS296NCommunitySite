@model MessageModel;
@{
    ViewData["Title"] = "Contact Page";
}

<div class="container">
    <div class="row">
        <div class="col-sm-2">picture</div>
        <div class="col-sm-8">
            <div class="text-center">

                <div class="text-center">
                    <h1 class="display-4 p-2">Contact Page</h1>
                    <p>A place for users sending messages to other users.</p>
                </div>


                <table>
                    <tr>
                        <th>First Name</th>
                        <th></th>
                        <th>Last Name</th>
                        <th></th>
                        <th>Subject  </th>
                        <th></th>
                        <th>Message</th>
                        <th></th>
                        <th>Date</th>
                    </tr>

                    @foreach (MessageModel message in ViewBag.messages)
                    {
            <tr>
                <td>@message.FirstName  </td>
                <td></td>
                <td>@message.LastName   </td>
                <td></td>
                <td>@message.Subject    </td>
                <td></td>
                <td>@message.Message</td>
                <td></td>
                <td>@message.Date</td>
            </tr>}
                </table>

                <hr />
                <a asp-controller="Home" asp-action="NewMessage">New Message</a>
            </div>
        </div>
        <div class="col-sm-2">picture</div>
    </div>
</div>

